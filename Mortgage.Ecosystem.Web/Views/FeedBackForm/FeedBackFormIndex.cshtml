@{
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="container-div">
    <div class="row">
        <div id="searchDiv" class="col-sm-12 search-collapse">
            <div class="select-list">
                <ul>
                    <li>
                        Name: <input id="name" col="Name" type="text" />
                    </li>
                    <li>
                        Status: <span id="status" col="Status"></span>
                    </li>
                    <li class="select-time">
                        <label>Created: </label>
                        <input id="startTime" col="StartTime" type="text" class="time-input" placeholder="start time" />
                        <span>-</span>
                        <input id="endTime" col="EndTime" type="text" class="time-input" placeholder="end time" />
                    </li>
                    <li>
                        <a id="btnSearch" class="btn btn-primary btn-sm" onclick="searchGrid()"><i class="fa fa-search"></i>&nbsp;search</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="btn-group-sm" id="toolbar">
            <a id="btnAdd" class="btn btn-success" onclick="showSaveForm(true)"><i class="fa fa-plus"></i> Add</a>
            <a id="btnEdit" class="btn btn-primary disabled" onclick="showSaveForm(false)"><i class="fa fa-edit"></i> edit</a>
            <a id="btnDelete" class="btn btn-danger disabled" onclick="deleteForm()"><i class="fa fa-remove"></i> delete</a>
        </div>

        <div class="col-sm-12 select-table table-striped">
            <table id="feedBackFormTable" data-mobile-responsive="true"></table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        initGrid();

        $("#status").cnComboBox({ data: cn.getJson(@Html.Raw(typeof(StatusEnum).EnumToDictionaryString())) });

        laydate.render({ elem: '#startTime', format: 'yyyy-MM-dd' });
        laydate.render({ elem: '#endTime', format: 'yyyy-MM-dd' });
    }); 

    function initGrid() {
        var queryUrl = '@Url.Content("~/FeedBackForm/GetPageListJson")';
        $('#feedBackFormTable').cnTable({
            url: queryUrl,
            columns: [
                { checkbox: true, visible: true },
                //{
                //    field: 'AddNewForm', title: '', align: 'center',
                //    formatter: function (value, row, index) {
                //        var html = '<div class="dropdown">' +
                //            '<button class="btn btn-secondary dropdown-toggle" type="button" id="addNewFormDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">' +
                //            'Add New Form' +
                //            '</button>' +
                //            '<div class="dropdown-menu" aria-labelledby="addNewFormDropdown">' +
                //            '<a class="dropdown-item" href="#" onclick="showSaveForm(true)">Form 1</a>' +
                //            '<a class="dropdown-item" href="#" onclick="showSaveForm(true)">Form 2</a>' +
                //            '<a class="dropdown-item" href="#" onclick="showSaveForm(true)">Form 3</a>' +
                //            '</div>' +
                //            '</div>';
                //        return html;
                //    }
                //},
                { field: 'Id', title: 'Id', visible: false },
                { field: 'EmailAddress', title: 'Email Address', sortable: true },
                { field: 'Subject', title: 'Subject', sortable: true },
                { field: 'Messages', title: 'Messages', sortable: true },
                {
                    field: 'Status', title: 'Status', align: 'center',
                    formatter: function (value, row, index) {
                        if (value == "@StatusEnum.Yes.ToInt()") {
                            return '<span class="badge badge-primary">' + "@StatusEnum.Yes.GetDescription()" + '</span>';
                        } else {
                            return '<span class="badge badge-warning">' + "@StatusEnum.No.GetDescription()" + '</span>';
                        }
                    }
                },
                {
                    field: 'BaseModifyTime', title: 'Create Time', formatter: function (value, row, index) {
                        return cn.formatDate(value, "yyyy-MM-dd HH:mm:ss");
                    }
                }
            ],
            queryParams: function (params) {
                var pagination = $('#feedBackFormTable').cnTable('getPagination', params);
                var queryString = $("#searchDiv").getWebControls(pagination);
                return queryString;
            }
        });
    }

    function searchGrid() {
        $('#feedBackFormTable').cnTable('search');
        resetToolbarStatus();
    }

    function showSaveForm(bAdd) {
        var id = 0;
        if (!bAdd) {
            var selectedRow = $("#feedBackFormTable").bootstrapTable("getSelections");
            if (!cn.checkRowEdit(selectedRow)) {
                return;
            }
            else {
                id = selectedRow[0].Id;
            }
        }
        cn.openDialog({
            title: id > 0 ? "Edit  FeedBack Form " : "FeedBack Form",
            content: '@Url.Content("~/FeedBackForm/FeedBackFormForm")' + '?id=' + id,
            width: "780px",
            callback: function (index, layero) {
                var iframeWin = window[layero.find('iframe')[0]['name']];
                iframeWin.saveForm(index);
            }
        });
    }

    function deleteForm() {
        var selectedRow = $("#feedBackFormTable").bootstrapTable("getSelections");
        if (cn.checkRowDelete(selectedRow)) {
            cn.confirm("Confirm to delete the selected" + selectedRow.length + "Row data?", function () {
                var ids = cn.getIds(selectedRow);
                cn.ajax({
                    url: '@Url.Content("~/FeedBackForm/DeleteFormJson")' + '?ids=' + ids,
                    type: "post",
                    success: function (obj) {
                        if (obj.Tag == 1) {
                            cn.msgSuccess(obj.Message);
                            searchGrid();
                        }
                        else {
                            cn.msgError(obj.Message);
                        }
                    }
                });
            });
        }
    }
</script>