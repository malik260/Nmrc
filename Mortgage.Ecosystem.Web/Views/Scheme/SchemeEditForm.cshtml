    if (id) {
        getForm(id);
    }
    $("#lender").cnComboBox({
        url: '@Url.Content("~/Lender/GetListJson")',
        key: "Id",
        value: "LenderName",
        class: "form-control",
        multiple: true,
        defaultValue: [],
        search: true
    });
