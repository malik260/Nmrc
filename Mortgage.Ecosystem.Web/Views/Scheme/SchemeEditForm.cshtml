    function getForm(id) {
     
        cn.ajax({
            url: '@Url.Content("~/Scheme/GetFormJsonn")',
            type: "get",
            data: { id: id },
            success: function (response) {
                if (response.Tag === 1) {
                    debugger
                    $("#name").val(response.Data.SchemeName);




                    //alert(response.Message);
                }
            }
        });
