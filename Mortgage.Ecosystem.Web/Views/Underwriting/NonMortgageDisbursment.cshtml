    function initGrid() {
        debugger
        var queryUrl = '@Url.Content("~/Underwriting/GetLoanNonMortgageForDis")';
        $('#gridTable').cnTable({
            url: queryUrl,
            detailView: true,
            sortName: 'BaseModifyTime',
            sortOrder: "Desc",
            columns: [
                { checkbox: true, visible: true },
