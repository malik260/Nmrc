<script type="text/javascript">

    $(function () {
        $('#menuTree').cnTree({
            id: "menuTree",
            url: '@Url.Content("~/Menu/GetMenuTreeListJson")',
            check: { enable: false },
            expandLevel: 0,
            callback: { onClick: saveChoose }
        });
    });

    function saveChoose(event, treeId, treeNode) {
        $("#treeId").val(treeNode.id);
        $("#treeName").val(treeNode.name);
    }
</script>