@{
    Layout = "~/Views/Shared/_FormWhite.cshtml";
}


<div class="creditScore" id="creditScore">
    <form id="form1" class="form-horizontal m">
        <div class="dialogblockborder dialogblockborderheadline">
            <div class="dialogblock-header" style="height: auto;">
                <span class="dialogblockheader">Credit Score</span>
                <div class="form-group">
                    <div class="col-sm-4">
                        <label class="creditType control-label" style="margin-left: 100px;">Credit Type</label>
                        @* <input type="text" col="CreditType" style="margin-left: 100px;" class="form-control" id="creditType">*@
                        <div id="creditType" col="CreditType" style="margin-left: 100px; width: 550px;"></div>

                    </div>
                    <div class="col-sm-4">
                        <label class="remark control-label" style="margin-left: 200px;">Remark</label>
                        <input type="text" col="Remark" style="margin-left: 200px;" class="form-control" id="remark">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4">
                        <label for="productCode" style="margin-left: 100px;" class="form-label">Product&nbsp;Code</label>
                        <input type="text" id="productCode" readonly style="margin-left: 100px;" col="ProductCode" class="form-control">

                    </div>
                    <div class="col-sm-4">
                        <label for="interestRate" style="margin-left: 200px;" class="form-label">Interest&nbsp;Rate</label>
                        <input type="text" col="InterestRate" style="margin-left: 200px;" class="form-control" id="interestRate">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4">
                        <label for="rangeMax" style="margin-left: 100px;" class="form-label">Range Max.</label>
                        <input type="text" style="margin-left: 100px;" col="RangeMax" class="form-control">

                    </div>
                    <div class="col-sm-4">
                        <label for="creditGrades" style="margin-left: 200px;" class="form-label">Credit&nbsp;Grades</label>
                        <input type="text" style="margin-left: 200px;" col="CreditGrade" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4">
                        <label for="rangeMin" style="margin-left: 100px;" class="form-label">Range Min.</label>
                        <input type="text" col="RangeMin" style="margin-left: 100px;" class="form-control" id="rangeMin">
                    </div>
                    <div class="col-sm-4">
                        <label for="creditGradeDefinitions" style="margin-left: 200px;" class="form-label">Credit&nbsp;Grade&nbsp;Definitions</label>
                        <textarea type="text" style="margin-left: 200px; height: 60px;" col="CreditGradeDefinition" class="form-control" id="creditGradeDefinitions"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4">
                        <label for="rating" style="margin-left: 100px;" class="form-label">Rating</label>
                        <input type="text" col="Rating" style="margin-left: 100px;" class="form-control" id="rating">
                    </div>
                </div>


            </div>
        </div>

    </form>
</div>

<script>
    debugger
    var id = cn.request("id");
    //$("#assesmentFactor").cnComboBox({
    //    url: '@Url./*Content("~/RiskFactor/GetListJsons")*/',
    //    key: "Id",
    //    value: "Name"
    //});


    $("#creditType").cnComboBox({
        url: '@Url.Content("~/CreditType/GetListJsons")',
        key: "Code",
        value: "Name"
    });

    $("#creditType").change(function () {
        debugger
        var selectedCredit = $("#creditType").cnComboBox('getValue');
        var id = selectedCredit;
        $("#productCode").val(id);
    });





    function getForm() {
        if (id > 0) {
            cn.ajax({
                url: '@Url.Content("~/AssessmentFactor/GetFormJson")' + '?id=' + id,
                type: "get",
                success: function (obj) {
                    if (obj.Tag == 1) {
                        var result = obj.Data;
                        $("#form1").setWebControls(result);
                    }
                }
            });
        }
        else {
            //var defaultData = {};
            //defaultData.Company = "";
            //defaultData.EmailAddress = ""
            //defaultData.MobileNumber = "";
            //$("#form").setWebControls(defaultData);
        }
    }



    function saveForm(index) {
        if ($("#form1").validate().form()) {
            var postData = $("#form1").getWebControls({ Id: id });
            cn.ajax({
                url: '@Url.Content("~/CreditScore/SaveFormJson")',
                type: "post",
                data: postData,
                success: function (obj) {
                    if (obj.Tag == 1) {
                        cn.msgSuccess(obj.Message);
                        //parent.searchGrid();
                        parent.layer.close(index);
                    }
                    else {
                        cn.msgError(obj.Message);
                    }
                }
            });
        }
    }
</script>





